@model HumanResources.Core.Entities.Employee
@using HumanResources.Core.Enums

@{
    ViewData["Title"] = "Create";
    Layout = "_CompanyManagerLayout";
}

<h4>Çalışan Ekleme Ekranı</h4>

<hr />

@if(ViewData["YasHatasi"]!=null)
{
    <div class="alert alert-info">@ViewData["YasHatasi"]</div>
}

<form asp-area="CompanyManager" asp-controller="Employee" asp-action="Create" class="row g-3" enctype="multipart/form-data" method="post">
    <div class="col-12">
        <label asp-for="Photo" class="form-label">Fotoğraf</label>
        <input asp-for="Photo" type="file" accept="image/*" class="form-control" id="Photo"
               onchange="document.getElementById('logoImage').src = window.URL.createObjectURL(this.files[0])" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="FirstName" pattern="[A-Za-z]" class="form-label">@Html.DisplayNameFor(model => model.FirstName)</label>
        <input asp-for="FirstName" type="text" class="form-control" id="FirstName">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="SecondName" class="form-label">@Html.DisplayNameFor(model => model.SecondName)</label>
        <input asp-for="SecondName" type="text" class="form-control" id="SecondName">
        <span asp-validation-for="SecondName" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="LastName" class="form-label">@Html.DisplayNameFor(model => model.LastName)</label>
        <input asp-for="LastName" type="text" class="form-control" id="LastName">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="CitizenNo" class="form-label">@Html.DisplayNameFor(model => model.CitizenNo)</label>
        <input asp-for="CitizenNo" type="number" class="form-control" id="CitizenNo">
        <span asp-validation-for="CitizenNo" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="PhoneNumber" class="form-label">@Html.DisplayNameFor(model => model.PhoneNumber)</label>
        <input asp-for="PhoneNumber" type="tel"  class="form-control" id="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Salary" class="form-label">@Html.DisplayNameFor(model => model.Salary)</label>
        <input asp-for="Salary" type="" name="text" class="form-control" id="Salary">
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Gender" class="form-label">@Html.DisplayNameFor(model => model.Gender)</label>
        <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<Gender>()" class="form-control" id="CompanyType"></select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Address" class="form-label">@Html.DisplayNameFor(model => model.Address)</label>
        <input asp-for="Address" type="text" class="form-control" id="Address">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="BirthDate" class="form-label">@Html.DisplayNameFor(model => model.BirthDate)</label>
        <input asp-for="BirthDate" type="date" class="form-control" id="BirthDate">
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="StartDate" class="form-label">@Html.DisplayNameFor(model => model.StartDate)</label>
        <input asp-for="StartDate" type="date" class="form-control" id="StartDate">
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="EndDate" class="form-label">@Html.DisplayNameFor(model => model.EndDate)</label>
        <input asp-for="EndDate" type="date" class="form-control" id="EndDate">
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="JobTitle" class="form-label">@Html.DisplayNameFor(model => model.JobTitle)</label>
        <input asp-for="JobTitle" type="text" class="form-control" id="JobTitle">
        <span asp-validation-for="JobTitle" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Job" class="form-label">@Html.DisplayNameFor(model => model.Job)</label>
        <input asp-for="Job" type="text" class="form-control" id="Job">
        <span asp-validation-for="Job" class="text-danger"></span>
    </div>
  
    <div class="col-12">

        <input class="form-check-input" asp-for="IsFirstTime" /> @Html.DisplayNameFor(model => model.IsFirstTime)

    </div>

    <div class="text-center">
        <input type="submit" value="Ekle" class="btn btn-primary" />
        <a asp-action="Index"><input value="Çalışanlar Listesine Dön" class="btn btn-primary" /></a>
    </div>
</form>
<hr />




