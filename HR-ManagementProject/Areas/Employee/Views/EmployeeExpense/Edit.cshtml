@model HumanResources.Core.Entities.Expense

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h4>Harcamayı Düzenle</h4>
<hr />

<form asp-controller="EmployeeExpense" asp-action="Edit" enctype="multipart/form-data" class="row g-3">
    
    <div class="col-12">
        <label asp-for="Total" class="form-label">@Html.DisplayNameFor(model => model.Total)</label>
        <input asp-for="Total" type="text" class="form-control" id="TotalPaymentRequest">
        <span asp-validation-for="Total" class="text-danger"></span>
    </div><br />
    <div class="col-12">
        <label asp-for="Description" class="form-label">@Html.DisplayNameFor(model => model.Description)</label>
        <textarea asp-for="Description" rows="5" cols="50" class="form-control" id="EndDate"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div><br />
    <div class="col-12">
        <label asp-for="ExpenseType" class="form-label">@Html.DisplayNameFor(model => model.Description)</label>
        <select asp-for="ExpenseType" class="form-control" asp-items="@Html.GetEnumSelectList<ExpenseType>();"></select>
        <span asp-validation-for="ExpenseType" class="text-danger"></span>
    </div><br />
    <div class="col-12">
        <label asp-for="File" class="form-label">@Html.DisplayNameFor(model => model.File)</label>
        <input asp-for="File" type="file" class="form-control" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div><br />

   <div class="text-center">
        <input type="hidden" asp-for="Id" />
        <button type="submit" value="Save" class="btn btn-primary">Düzenle</button>
        <button asp-action="Index" class="btn btn-secondary">Harcama Listesine Dön</button>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
