@model HR_ManagementProject.Areas.Employee.Models.PermissionEmployeeVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h1>İzini Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @if (Model.Employee.Gender == HumanResources.Core.Enums.Gender.Male)
                {
                    <label asp-for="Permission.PermissionType" class="control-label"></label>
                    <select asp-for="Permission.PermissionType" class="form-control" asp-items="@Html.GetEnumSelectList<HumanResources.Core.Enums.PermissionTypeMale>();"></select>
                    <span asp-validation-for="Permission.PermissionType" class="text-danger"></span>
                }
                else
                {
                    <label asp-for="Permission.PermissionType" class="control-label"></label>
                    <select asp-for="Permission.PermissionType" class="form-control" asp-items="@Html.GetEnumSelectList<HumanResources.Core.Enums.PermissionTypeFemale>();"></select>
                    <span asp-validation-for="Permission.PermissionType" class="text-danger"></span>
                }

                @*<label asp-for="Permission.PermissionType" class="control-label"></label>
                <select asp-for="Permission.PermissionType" class="form-control"></select>
                <span asp-validation-for="Permission.PermissionType" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Permission.TotalDayOfPermissionType" class="control-label"></label>
                <input asp-for="Permission.TotalDayOfPermissionType" class="form-control" />
                <span asp-validation-for="Permission.TotalDayOfPermissionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Permission.RequestDate" class="control-label"></label>
                <input asp-for="Permission.RequestDate" class="form-control" />
                <span asp-validation-for="Permission.RequestDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Permission.StartDate" class="control-label"></label>
                <input asp-for="Permission.StartDate" class="form-control" />
                <span asp-validation-for="Permission.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Permission.EndDate" class="control-label"></label>
                <input asp-for="Permission.EndDate" class="form-control" />
                <span asp-validation-for="Permission.EndDate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Permission.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">İzin Listesine Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
