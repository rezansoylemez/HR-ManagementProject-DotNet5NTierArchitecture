@model HumanResources.Core.Entities.Company
@using HumanResources.Core.Enums
@{
    ViewData["Title"] = "Create";
}


<h4>Yeni Şirket Oluştur</h4>
<hr />

<form asp-area="Admin" asp-controller="Company" asp-action="Create" class="row g-3" enctype="multipart/form-data" method="post">

    <div class="col-12">

        <label asp-for="Photo" class="form-label">Fotoğraf</label>
        <input asp-for="Photo" type="file" accept="image/*" class="form-control" id="Photo"
               onchange="document.getElementById('logoImage').src = window.URL.createObjectURL(this.files[0])" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="CompanyType" class="form-label">@Html.DisplayNameFor(model => model.CompanyType)</label>
        <select asp-for="CompanyType" asp-items="@Html.GetEnumSelectList<CompanyType>()" class="form-control" id="CompanyType"></select>
        <span asp-validation-for="CompanyType" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Address" class="control-label"></label>
        <textarea asp-for="Address" class="form-control"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" type="text" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="TaxNumber" class="control-label"></label>
        <input asp-for="TaxNumber" class="form-control" />
        <span asp-validation-for="TaxNumber" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="TaxAdministration" class="control-label"></label>
        <input asp-for="TaxAdministration"  class="form-control" />
        <span asp-validation-for="TaxAdministration" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="MersisNo" class="control-label"></label>
        <input asp-for="MersisNo" class="form-control" />
        <span asp-validation-for="MersisNo" class="text-danger"></span>
    </div>

    @*<div class="col-12">
        Kategori
        <select asp-for="Packages" class="form-control" asp-items="ViewBag.PackagesData"></select>
    </div>*@
    <br />
    <div class="text-center">
        <input type="submit" value="Ekle" class="btn btn-primary" />
         <button asp-area="Admin" asp-controller="Company" asp-action="Index" class="btn btn-secondary">Şirketler Listesine Dön</button>
    </div>
</form>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
