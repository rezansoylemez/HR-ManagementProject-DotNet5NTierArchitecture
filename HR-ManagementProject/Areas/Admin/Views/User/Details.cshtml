                <div class="col-lg-3  col-md-4 label ">&nbsp;&nbsp; <b>@Html.DisplayNameFor(model=>model.BirthDate):</b></div> 
                <div class="col-lg-9  col-md-8">@Html.DisplayFor(model=>model.BirthDate)</div>
