@using Microsoft.AspNetCore.Http
@model HumanResources.Core.Entities.User

@{
    ViewData["Title"] = "Details";
     if (Context.Session.GetString("email") != "admin@admin.com")
    {
        Layout = "~/Views/Shared/_CompanyManagerLayout.cshtml";
    }
}

<h1>Yönetici Detayları</h1>

<div>
    <div>
        <hr/>
        <div class="row align-content-center">
            <span class="nav-link nav-profile d-flex align-content-center pe-0">
                @if (Model.PhotoPath != null)
                {
                    <a><img class="rounded-circle" src="@Url.Content(Model.PhotoPath)" asp-append-version="true" width="200px" height="200px" alt=""></a>
                }
                else
                {
                    <a><img class="rounded-circle" src="@Url.Content("~/images/default.png")" asp-append-version="true" width="200px" height="200px" alt=""></a>
                }
            </span>
                
            </div>
        <div class="card">
            <br/>
            <br/>
            
            <div class="row">
                <div class="col-lg-3  col-md-4 label ">&nbsp;&nbsp; <b>@Html.DisplayNameFor(model=>model.FirstName):</b></div> 
                <div class="col-lg-9  col-md-8">@Html.DisplayFor(model=>model.FirstName)</div>
            </div>
            <div class="row">
                <div class="col-lg-3  col-md-4 label ">&nbsp;&nbsp; <b>@Html.DisplayNameFor(model=>model.SecondName):</b></div> 
                <div class="col-lg-9  col-md-8">@Html.DisplayFor(model=>model.SecondName)</div>
