            <form asp-area="Admin" asp-controller="User" asp-action="Edit">&nbsp;&nbsp;
                <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-primary">Yöneticiler Listesine Dön</a>
            </form>
            <br/>
            <br/>
        </div>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}


