@model HumanResources.Core.Entities.Admin
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LoginLayout";

}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-info"> @TempData["ErrorMessage"]</div>
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-info"> @TempData["Message"]</div>
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/images/HumanRes1.png" alt="IMG">
              @*  <img src="/Login_v1/images/img-01.png" alt="IMG">*@
                
            </div>

            <form asp-area="Company" asp-controller="Login" asp-action="Login" class="login100-form validate-form" novalidate>
                <span class="login100-form-title">
                    Kullanıcı Girişi
                </span>

                <div class="wrap-input100 validate-input">
                    <input asp-for="Email" class="input100 form-control" type="text" name="email" placeholder="Email" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                    <div class="invalid-feedback">Lütfen E-postanızı giriniz.</div>
                </div>

                <div class="wrap-input100 validate-input">
                    <input asp-for="Password" class="input100 form-control" type="password" name="password" placeholder="Şifre" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    <div class="invalid-feedback">Lütfen şifrenizi giriniz.</div>
                </div>

                <div class="container-login100-form-btn">
                    @*<button class="login100-form-btn">
                    Login
                    </button>*@

                    <input type="submit" value="Giriş" class="login100-form-btn" />

                </div>

                @*<div class="text-center p-t-12">
                    <span class="txt1">
                        Unuttun mu
                    </span>
                    <a class="txt2" href="#">
                        Email / Şifre?
                    </a>
                </div>*@

                @*<div class="text-center p-t-136">
                <a class="txt2" href="#">
                Create your Account
                <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                </a>
                </div>*@
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

